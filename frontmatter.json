{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.pageFolders": [
    {
      "title": "Weblog",
      "contentTypes": ["default"],
      "filePrefix": "/{{date|yyyy}}/",
      "path": "[[workspace]]/src/content/blog",
      "previewPath": "/{{fm.fmContentType}}/{{fm.date|format:yyyy}}/",
      "trailingSlash": true
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets/images/",
    "relative": true
  },
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.taxonomy.contentTypes": [
    {
      "fields": [
        {
          "name": "title",
          "title": "title",
          "type": "string"
        },
        {
          "name": "description",
          "title": "description",
          "type": "string"
        },
        {
          "name": "draft",
          "title": "draft",
          "type": "draft"
        },
        {
          "name": "date",
          "title": "date",
          "type": "datetime"
        },
        {
          "fieldGroup": ["resources_group"],
          "name": "resources",
          "title": "resources",
          "type": "block"
        },
        {
          "name": "tags",
          "title": "tags",
          "type": "tags"
        },
        {
          "name": "fmContentType",
          "title": "fmContentType",
          "type": "string"
        },
        {
          "fields": [
            {
              "name": "src",
              "title": "src",
              "type": "string"
            },
            {
              "name": "title",
              "title": "title",
              "type": "string"
            }
          ],
          "name": "cover",
          "title": "cover",
          "type": "fields"
        },
        {
          "name": "publisher",
          "title": "publisher",
          "type": "string"
        }
      ],
      "name": "default",
      "pageBundle": false
    }
  ],
  "frontMatter.taxonomy.fieldGroups": [
    {
      "fields": [
        {
          "name": "title",
          "title": "title",
          "type": "string"
        },
        {
          "name": "src",
          "title": "src",
          "type": "string"
        }
      ],
      "id": "resources_group"
    },
    {
      "fields": [
        {
          "name": "title",
          "title": "title",
          "type": "string"
        },
        {
          "name": "src",
          "title": "src",
          "type": "string"
        }
      ],
      "id": "resources_group"
    }
  ],
  "frontMatter.taxonomy.slugTemplate": "{{title}}"
}
