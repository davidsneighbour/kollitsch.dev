---

import type { CollectionEntry } from 'astro:content';

import SchemaBlogPost from '@components/schema/BlogPosting.astro';
import PostImage from '@components/PostImage.astro';
import { Image } from 'astro:assets';

import author from '@assets/images/patrick-kollitsch.png';

export interface Props {
  post: CollectionEntry<'blog'>;
}
const { post } = Astro.props;

---

<article
  class="inset-0 flex flex-col items-start justify-between rounded-2xl ring-1 ring-gray-900/10 ring-inset"
>
  <PostImage post={post} classes="max-w-full aspect-3/2 object-cover" />

  <div class="max-w-xl p-4">
    <div class="mt-8 flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-gray-500"
        >{new Date(post.data.date).toLocaleDateString('en-GB')}</time
      >
    </div>
    <div class="group relative">
      <h3
        class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600"
      >
        <a href={`/blog/${post.id}/`}>
          <span class="absolute inset-0"></span>
          {post.data.title}
        </a>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
        {post.data.summary}
      </p>
    </div>
    <div class="relative mt-8 flex items-center gap-x-4">
      <Image
        src={author}
        width={256}
        height={256}
        alt="Patrick Kollitsch"
        class="size-10 rounded-full bg-gray-100"
      />
      <div class="text-sm/6">
        <p class="font-semibold text-gray-900">
          <a href="#">
            <span class="absolute inset-0"></span>
            Patrick Kollitsch
          </a>
        </p>
      </div>
    </div>
    <SchemaBlogPost post={post} />
  </div>
</article>
