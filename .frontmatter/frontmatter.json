{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.config.dynamicFilePath": "[[workspace]]/.frontmatter/config.cjs",
  "frontMatter.content.autoUpdateDate": false,
  "frontMatter.content.pageFolders": [
    {
      "contentTypes": [
        "blog",
        "music2program2",
        "notes-from-the-laboratory"
      ],
      "path": "[[workspace]]/.frontmatter/content/blog",
      "title": "Blog"
    },
    {
      "contentTypes": [
        "component"
      ],
      "path": "[[workspace]]/.frontmatter/content/gohugo",
      "title": "Modules"
    },
    {
      "contentTypes": [
        "tag"
      ],
      "path": "[[workspace]]/.frontmatter/content/tags",
      "title": "Tags"
    }
  ],
  "frontMatter.content.publicFolder": "static",
  "frontMatter.content.snippets": {
    "Caption": {
      "body": "{{< caption >}}",
      "description": "caption",
      "fields": []
    }
  },
  "frontMatter.custom.scripts": [
    {
      "command": "~/.nvm/versions/node/v20.18.0/bin/node",
      "script": ".frontmatter/scripts/create-youtube-header-image.js",
      "title": "Generate social image for Youtube"
    }
  ],
  "frontMatter.dashboard.content.card.fields.date": true,
  "frontMatter.dashboard.content.card.fields.status": true,
  "frontMatter.experimental": true,
  "frontMatter.extends": [
    "https://dnbhub.xyz/frontmatter/settings.global.json"
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.git.commitMessage": "chore: update content",
  "frontMatter.git.disableOnBranches": [
    "main"
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.logging": "verbose",
  "frontMatter.panel.freeform": true,
  "frontMatter.projects": [
    {
      "name": "blog",
      "default": true,
      "configuration": {
        "frontMatter.content.pageFolders": [
          {
            "title": "Blog posts",
            "path": "[[workspace]]/.frontmatter/content/blog"
          }
        ]
        //"frontMatter.content.publicFolder": "[[workspace]]/websites/blog/public"
      }
    },
    {
      "name": "gohugo",
      "configuration": {
        "frontMatter.content.pageFolders": [
          {
            "title": "Portfolio",
            "path": "[[workspace]]/.frontmatter/content/gohugo"
          }
        ]
        // "frontMatter.content.publicFolder": "[[workspace]]/websites/portfolio/public"
      }
    }
  ],
  // "frontMatter.taxonomy.commaSeparatedFields": [
  //   "tags",
  //   "categories"
  // ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "fields": [
        {
          "name": "title",
          "title": "Title",
          "type": "string"
        },
        {
          "name": "description",
          "title": "Description",
          "type": "string"
        },
        {
          "default": "{{now}}",
          "isPublishDate": true,
          "name": "date",
          "title": "Publishing date",
          "type": "datetime"
        },
        {
          "name": "preview",
          "title": "Content preview",
          "type": "image"
        },
        {
          "name": "draft",
          "title": "Is in draft",
          "type": "draft"
        },
        {
          "name": "tags",
          "title": "Tags",
          "type": "tags"
        },
        {
          "name": "categories",
          "title": "Categories",
          "type": "categories"
        }
      ],
      "name": "default",
      "pageBundle": false,
      "previewPath": null
    },
    {
      "fields": [
        {
          "name": "title",
          "single": true,
          "title": "Title",
          "type": "string"
        },
        {
          "name": "description",
          "title": "Description",
          "type": "string"
        },
        {
          "dateFormat": "yyyy-MM-dd'T'HH:mm:ssxxx",
          "default": "{{now}}",
          "isPublishDate": true,
          "name": "date",
          "title": "Publishing date",
          "type": "datetime"
        },
        {
          "dateFormat": "yyyy-MM-dd'T'HH:mm:ssxxx",
          "default": "{{now}}",
          "isModifiedDate": true,
          "name": "lastmod",
          "title": "Last modified date",
          "type": "datetime"
        },
        {
          "name": "draft",
          "title": "Draft",
          "type": "draft"
        },
        {
          "name": "tags",
          "title": "Tags",
          "type": "tags"
        },
        {
          "name": "categories",
          "title": "Categories",
          "type": "categories"
        },
        {
          "fieldGroup": [
            "resources"
          ],
          "multiple": true,
          "name": "resources",
          "title": "Resources",
          "type": "block"
        }
      ],
      "name": "blog",
      "pageBundle": true,
      "previewPath": "yyyy/{{permalink}}"
    },
    {
      "fields": [
        {
          "name": "title",
          "single": true,
          "title": "Title",
          "type": "string"
        },
        {
          "name": "description",
          "single": true,
          "title": "Description",
          "type": "string"
        },
        {
          "dateFormat": "yyyy-MM-dd'T'HH:mm:ssxxx",
          "default": "{{now}}",
          "isPublishDate": true,
          "name": "date",
          "title": "Publishing date",
          "type": "datetime"
        },
        {
          "dateFormat": "yyyy-MM-dd'T'HH:mm:ssxxx",
          "default": "{{now}}",
          "isModifiedDate": true,
          "name": "lastmod",
          "title": "Last modified date",
          "type": "datetime"
        },
        {
          "name": "draft",
          "title": "Draft",
          "type": "draft"
        },
        {
          "name": "tags",
          "title": "Tags",
          "type": "tags"
        },
        {
          "name": "categories",
          "title": "Categories",
          "type": "categories"
        },
        {
          "fieldGroup": [
            "resources"
          ],
          "name": "resources",
          "title": "Resources",
          "type": "block"
        }
      ],
      "name": "default",
      "pageBundle": true,
      "previewPath": "{{permalink}}"
    }
  ],
  "frontMatter.taxonomy.dateField": "publishDate",
  "frontMatter.taxonomy.dateFormat": "yyyy-MM-dd'T'HH:mm:ssxxx",
  "frontMatter.taxonomy.fieldGroups": [
    {
      "fields": [
        {
          "isPreviewImage": true,
          "name": "src",
          "required": true,
          "title": "Path/Filename",
          "type": "image"
        },
        {
          "name": "title",
          "single": true,
          "title": "Title",
          "type": "string"
        },
        {
          "name": "name",
          "single": true,
          "title": "Identifier",
          "type": "string"
        }
      ],
      "id": "resources",
      "labelField": "src"
    },
    {
      "fields": [
        {
          "name": "name",
          "single": true,
          "title": "Author Name",
          "type": "string"
        },
        {
          "name": "social",
          "single": true,
          "title": "Social link",
          "type": "string"
        }
      ],
      "id": "author",
      "labelField": "name"
    }
  ],
  "frontMatter.taxonomy.frontMatterType": "YAML",
  "frontMatter.taxonomy.modifiedField": "lastmod",
  "frontMatter.taxonomy.noPropertyValueQuotes": [
    "date"
  ],
  "frontMatter.taxonomy.seoDescriptionLength": 180,
  "frontmatter.content.autoUpdateDate": true,
  "frontmatter.content.placeholders.permalink": "/blog/{{year}}/{{slug}}/index.md"
}
