#!/bin/bash

PS3='Choose section: '
options=("Post" "Tag" "Quit")
select opt in "${options[@]}"; do
  case $opt in
  "Post")
    YEAR=$(date +'%Y')
    # MONTH=$(date +'%B')
    read -r -p 'Title: ' POST
    POST=${POST// /-}
    POST=${POST,,}
    hugo new blog/"${YEAR}"/"${POST}"
    exit
    ;;
  "Tag")
    read -r -p 'Title: ' TAG
    TAG=${TAG// /-}
    TAG=${TAG,,}
    hugo new tags/"${TAG}"
    exit
    ;;
  # "Notebook Entry")
  #   read -r -p 'Title: ' NOTEBOOK
  #   NOTEBOOK=${NOTEBOOK// /-}
  #   NOTEBOOK=${NOTEBOOK,,}
  #   hugo new notebook/"${NOTEBOOK}" --kind notebook
  #   exit
  #   ;;
  # "Variable")
  #   select TYPE in File Page Section Shortcode Site Taxonomy Menu; do
  #     read -r -p 'Variable name: ' VARIABLE
  #     hugo new variables/"${TYPE,,}"/"${VARIABLE}" --kind variable
  #     exit
  #   done
  #   ;;
  "Quit")
    break
    ;;
  *) echo "invalid option $REPLY" ;;
  esac
done
