---
import type { HTMLAttributes } from 'astro/types';
import { Icon } from 'astro-icon/components';

type IconPosition = 'prefix' | 'postfix';

type Props = {
  icon: string;
  type?: IconPosition;
} & HTMLAttributes<'a'>;

const { type = 'prefix', icon, ...attrs }: Props = Astro.props;
const hasSlot = !!Astro.slots.default;
---

<a href={attrs.href} class="flex items-center gap-2" translate="no" {...attrs}>
  {type === 'prefix' && <Icon name={icon} />}
  {hasSlot && <span><slot /></span>}
  {type === 'postfix' && <Icon name={icon} />}
</a>
