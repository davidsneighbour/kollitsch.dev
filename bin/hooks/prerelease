#!/bin/bash

REQUIRED_TOOLS=(
  git
  hugo
  typos
)

for TOOL in "${REQUIRED_TOOLS[@]}"; do
  if ! command -v "${TOOL}" >/dev/null; then
    echo "${TOOL} is required... "
    exit 1
  fi
done

# SCRIPTPATH="$(
#   cd "$(dirname "$0")" >/dev/null 2>&1 || exit
#   pwd -P
# )"
CURPATH="$(pwd -P)"

typos -- ./content

hugo mod get -u ./...
hugo mod tidy

FILE="${CURPATH}"/go.mod
if test -f "$FILE"; then
    git add go.sum
fi

FILE="${CURPATH}"/go.sum
if test -f "$FILE"; then
    git add go.sum
fi
