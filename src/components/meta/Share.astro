---
const { post } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<div class="flex flex-row items-center justify-start gap-2">
  <div class="w-6">
    <Icon name="bi:share-fill" />
  </div>
  <div class="flex flex-row items-center justify-start gap-2">
    <span>Share: </span>
    <Icon name="bi:linkedin" />
    <a
      href="https://www.linkedin.com/sharing/share-offsite/?url=${post.data.url}"
      target="_blank"
      rel="noopener">LinkedIn</a
    >
    <Icon name="bi:facebook" />
    <a
      href="https://facebook.com/sharer/sharer.php?&u=${post.data.url}"
      target="_blank"
      rel="noopener">Facebook</a
    >
    <Icon name="bi:reddit" />
    <a
      href="https://www.reddit.com/submit?url=${post.data.url}&title=${post.data.title}"
      target="_blank"
      rel="noopener">Reddit</a
    >
  </div>
</div>
