{
  "scripts": {
    "build:package": "wireit"
  },
  "wireit": {
    "build:package": {
      "dependencies": [
        "build:package:jsonnet",
        "build:package:fixpack"
      ]
    },
    "build:package:fixpack": {
      "command": "fixpack",
      "dependencies": [
        "build:package:jsonnet"
      ]
    },
    "build:package:jsonnet": {
      "command": "node ./scripts/package/generate-jsonnet.js --verbose"
    }
  }
}
