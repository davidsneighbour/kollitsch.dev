{
  "name": "@davidsneighbour/kollitsch-dev",
  "version": "2022.5.38",
  "license": "UNLICENSED",
  "description": "Website and content for kollitsch.dev",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "homepage": "https://kollitsch.dev",
  "repository": "davidsneighbour/kollitsch.dev",
  "dependencies": {
    "@davidsneighbour/bootstrap-config": "^4.0.2",
    "@davidsneighbour/browserslist-config": "^4.0.2",
    "@davidsneighbour/commitlint-config": "^4.0.2",
    "@davidsneighbour/cssnano-config": "^4.0.2",
    "@davidsneighbour/cypress-config": "^4.0.2",
    "@davidsneighbour/eslint-config": "^4.0.2",
    "@davidsneighbour/htmlvalidate-config": "^0.0.12",
    "@davidsneighbour/postcss-config": "^4.0.3",
    "@davidsneighbour/prettier-config": "^4.0.3",
    "@davidsneighbour/standard-version-config": "^4.0.2",
    "@davidsneighbour/stylelint-config": "^4.0.2",
    "@davidsneighbour/tools": "^4.0.2",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@sentry/node": "^6.19.7",
    "@sentry/tracing": "^6.19.7",
    "@types/bootstrap": "^5.1.11",
    "algoliasearch": "^4.13.0",
    "alpinejs": "^3.10.2",
    "ansi-regex": ">=6.0.1",
    "axios": "^0.27.2",
    "dotenv": "^16.0.0",
    "html-validate": "^7.0.0",
    "instantsearch.js": "^4.40.5",
    "lazysizes": "^5.3.2",
    "lighthouse-plugin-field-performance": "^3.0.0",
    "link-checker": "^1.4.2",
    "lite-youtube-embed": "^0.2.0",
    "lockfile-lint": "^4.7.4",
    "mem": "^9.0.2",
    "netlify-cli": "^10.3.0",
    "ninja-keys": "^1.2.1",
    "node-fetch": "^3.2.4",
    "package.json": "^2.0.1",
    "pixrem": "^5.0.0",
    "precss": "^4.0.0",
    "reasonable-colors": "^0.4.0",
    "sass": "^1.51.0",
    "svgo": "^2.8.0",
    "trim": ">=1.0.1",
    "typescript": "^4.6.4",
    "web-vitals-element": "^1.3.7",
    "xml2js": "^0.4.23",
    "yargs-parser": ">=21.0.1"
  },
  "scripts": {
    "audit:html": "hugo && html-validate public/**/*.html",
    "audit:hugo": "./bin/dnb-hugo-audit",
    "build": "run-s build:critical build:hugo",
    "build:critical": "",
    "build:frontmatter": "node assets/config/frontmatter/build.ts",
    "build:highlights": "hugo gen chromastyles --style=monokai > assets/scss/components/_syntaxhighlightingdark.scss && hugo gen chromastyles --style=monokailight > assets/scss/components/_syntaxhighlightinglight.scss",
    "build:hugo": "./bin/build/hugo",
    "build:script": "tsc",
    "deploy:test": "bin/deploy/test",
    "deploy": "bin/deploy/live",
    "check-env": "node -e 'console.log(process.env)' | grep npm_config_",
    "clean": "run-p clean:*",
    "clean:audit": "rimraf tests/lighthouse/reports/*.{csv,html,json}",
    "clean:cypress": "rimraf tests/cypress/{downloads,screenshots,videos}/*",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock",
    "clean:npm": "rimraf node_modules package-lock.json",
    "clean:netlify": "rimraf .netlify/cache .netlify/functions",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "cypress": "npm run cypress:run",
    "cypress:info": "cypress info",
    "cypress:install": "cypress install",
    "cypress:run": "cypress open --config-file tests/cypress/cypress.json",
    "cypress:verify": "cypress verify",
    "lighthouse": "bin/audit/lighthouse",
    "lint:links": "link-checker public/",
    "lint:html": "html-validate --config=tests/html-validator/config.json public",
    "lint:html:config": "html-validate --print-config --config=tests/html-validator/config.json",
    "lint:lockfiles": "lockfile-lint --path package-lock.json --type=npm",
    "lint:scripts": "eslint assets/js --ext .ts",
    "lint:scripts:fix": "eslint assets/js --ext .ts --fix",
    "lint:styles": "stylelint assets/scss",
    "lint:styles:fix": "stylelint assets/scss --fix",
    "lint:templates": "bin/audit/lint-template-style",
    "prettier": "prettier 'assets/**/*.ts'",
    "prettier:fix": "prettier --write 'assets/**/*.ts'",
    "release": "standard-version --release-as patch --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:major": "standard-version --release-as major --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "standard-version --release-as minor --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "serve": "run-p serve:hugo",
    "serve:hugo": "bin/server/run",
    "serve:script": "tsc --watch",
    "server": "run-p serve watch",
    "server:paranoid": "bin/server/run-paranoid",
    "tests": "npm run cypress",
    "update": "npm-check-updates -u && npm install && fixpack && npx browserslist@latest --update-db",
    "watch": "npm-watch"
  },
  "private": true,
  "browserslist": [
    "extends @davidsneighbour/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@davidsneighbour/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@davidsneighbour/eslint-config"
    ]
  },
  "prettier": "@davidsneighbour/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@davidsneighbour/remark-config"
    ]
  },
  "watch": {
    "build:frontmatter": "assets/config/frontmatter/**/*.*"
  },
  "devDependencies": {
    "wireit": "^0.4.0"
  }
}
