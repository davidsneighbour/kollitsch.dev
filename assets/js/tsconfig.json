{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "12.1.0",
  "include": [
    "**/*.(js|ts)"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "typeRoots": [
      "./assets/js"
    ],
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
  }
}
