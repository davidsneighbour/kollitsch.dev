---
// @todo refactor

import '@styles/global.css';
import Head from '@components/Head.astro';
import Breakpoints from '@components/development/Breakpoints.astro';

const { post } = Astro.props;

// Add a full="true" prop to control full height for the page
// @todo consider adding that as default class to the layout
const { full = false, class: extraClasses = '' } = Astro.props;

// html classes
const htmlClasses = [
  'scheme-light',
  'dark:scheme-dark',
  'scroll-smooth',
  'bg-white dark:bg-zinc-950',
  full && 'h-full',
  extraClasses,
]
  .filter(Boolean)
  .join(' ');

// body classes
const bodyClasses = [
  'min-h-screen',
  'overflow-y-scroll',
  'bg-white dark:bg-zinc-950',
  full && 'h-full',
]
  .filter(Boolean)
  .join(' ');
---

<!doctype html>
<html lang="en" class={htmlClasses}>
  <head>
    <Head post={post} />
  </head>
  <body class={bodyClasses}>
    <slot />
    <Breakpoints />
  </body>
</html>
