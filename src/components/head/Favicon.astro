---
// @todo refactor and comment
import { getImage } from "astro:assets";
import faviconSrc from "@assets/favicon/favicon.png";
import faviconSvgSrc from "@assets/favicon/favicon.svg";

export interface Props {}

const appleTouchIcon = await getImage({
  attributes: {
    height: 180,
    width: 180,
  },
  format: "png",
  src: faviconSrc,
});
const faviconSvg = await getImage({ format: "svg", src: faviconSvgSrc });
---

<link
  rel="icon"
  href="/favicon.ico"
  sizes="32x32"
/>
<link
  rel="icon"
  sizes="any"
  href={faviconSvg.src}
  type="image/svg+xml"
/>
<link
  rel="manifest"
  href="/manifest.json"
/>
<link
  rel="apple-touch-icon"
  href={appleTouchIcon.src}
/>
