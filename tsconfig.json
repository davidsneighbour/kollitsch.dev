{
  "compilerOptions": {
    // not happy about this, but without it our json imports throw errors
    // Module '"...kollitsch.dev/src/data/footernavigation"' can only be
    // default-imported using the 'allowSyntheticDefaultImports' flag ts(1259)
    // footernavigation.json(1, 1): This module is declared with 'export =',
    // and can only be used with a default import when using the
    // 'allowSyntheticDefaultImports' flag.
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@content/*": ["./src/content/*"],
      "@contentconfig": ["./src/content.config.ts"],
      "@data/*": ["./src/data/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@packages/*": ["./src/packages/*"],
      "@pages/*": ["./src/pages/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@styles/*": ["./src/styles/*"],
      "@test/*": ["./src/test/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "types": ["astro/client"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist", "scratch", "src/scripts", "src/config"],
  "extends": "astro/tsconfigs/strictest",
  "include": ["src"]
}
