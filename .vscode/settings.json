{
  // autosave and autoformatting
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable", // ðŸ‘€
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  "files.autoSaveWhenNoErrors": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "always",
    "source.fixAll.biome": "explicit"
  },

  // path resolution in components (and others)
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",

  // file nesting setup
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.astro": "$(capture).test.ts",
    ".env": ".env*",
    "package.json": ".lychee*, .commitlint*, .editorconfig*, .fixpack*, .gitignore, .lintstaged*, .nvm*, .stylelint*, biome*, eslint*, netlify*, prettier*, package*, .versionrc*, .ls-lint.*, frontmatter.json",
    "shared-config.ts": "shared-config*",
    "*.json": "$(capture).schema.json,$(capture).test.ts",
    "README.md": "AGENTS.md",
    "playwright.config.ts": "playwright.*.ts"
  },

  // remove scratch files from search
  "search.exclude": {
    "scratch.md": true,
    "scratch/**": true
  },

  // other settings
  "svg.preview.background": "black",

  // astro specific settings
  "astro.content-intellisense": true,
  "astro.updateImportsOnFileMove.enabled": true,
  "files.associations": {
    "**/*.astro": "astro",
    "**/*.css": "tailwindcss"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // PLUGIN: stylelint setup
  // disable internal validation to avoid double warnings/errors
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.configFile": "./src/config/stylelint/index.js",
  "stylelint.validate": ["css", "scss", "less", "astro"],

  // PLUGIN: vale setup
  "vale.enableSpellcheck": true,
  "vale.valeCLI.installVale": true,
  "vale.valeCLI.syncOnStartup": true,
  // secretlint-disable-next-line @secretlint/secretlint-rule-no-homedir
  "vale.valeCLI.config": "/home/patrick/.dotfiles/configs/vale/.vale.ini",
  "vale.valeCLI.minAlertLevel": "error",

  // PLUGIN: markdownlint setup
  "markdownlint.configFile": "src/config/.markdownlint.jsonc",
  // @see "editor.codeActionsOnSave"

  // PLUGIN: markdown all in one setup
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.toc.unorderedList.marker": "*",

  // workspace color theme configuration
  // (via peacock, disable plugin after setting up the theme)
  "peacock.color": "#ff7733",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ff9966",
    "activityBar.background": "#ff9966",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#00802b",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#ff9966",
    "statusBar.background": "#ff7733",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#ff5500",
    "statusBarItem.remoteBackground": "#ff7733",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#ff7733",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#ff773399",
    "titleBar.inactiveForeground": "#15202b99"
  },

  // PLUGIN: indent rainbow setup
  "indentRainbow.indicatorStyle": "light",

  // PLUGIN: Tailwind CSS Intellisense
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "class:list",
    "classes"
  ],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/dist/**",
    "**/.wireit/**",
    "**/.astro/**"
  ],

  // PLUGIN: biome
  // @see "editor.codeActionsOnSave"
  "biome.configurationPath": "biome.jsonc",
  "biome.requireConfiguration": true,

  // PLUGIN: todo tree
  "todo-tree.tree.scanMode": "workspace only",
  "todo-tree.general.automaticGitRefreshInterval": 300,
  "todo-tree.general.debug": true,
  "todo-tree.general.exportPath": "~/todo-tree-%Y%m%d-%H%M.txt",
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "@todo"
  ],
  "todo-tree.highlights.useColourScheme": true,

  // PLUGIN: indent rainbow
  "indentRainbow.colorOnWhiteSpaceOnly": true,
  "accessibility.openChatEditedFiles": true,

}
