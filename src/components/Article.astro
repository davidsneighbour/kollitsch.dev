---
import Prose from '@components/Prose.astro';

export interface Props {
  class?: string;
  post?: {
    data: {
      title: string;
      description?: string;
      date: Date;
    };
    rendered?: {
      html: string;
    };
  };
}
const { ...props } = Astro.props as Props;
---

<article class={props.class}>
  <Prose>
    <slot />
  </Prose>
</article>
