  <!-- A simple list that the TagFilter script will target -->
  <div data-tag-filter-list data-tag-filter-id="default">
    <a href="/tags/apple/" data-label="apple">Apple</a>
    <a href="/tags/banana/" data-label="banana">Banana</a>
    <a href="/tags/cherry/" data-label="cherry">Cherry</a>
  </div>
</main>
