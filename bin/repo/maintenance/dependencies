#!/bin/bash
# v20230716001

set -euo pipefail # http://redsymbol.net/articles/unofficial-bash-strict-mode
IFS=$'\n\t'

# @todo quick check (just return status code)
# @todo only list changed repositories
# @todo better output formatting

REQUIRED_TOOLS=(
  git
)

# check if all requirements are met
for TOOL in "${REQUIRED_TOOLS[@]}"; do
  if ! command -v "${TOOL}" >/dev/null; then
    echo "${TOOL} is required... "
    exit 1
  fi
done

echo -e "\e[1;36m[================================================]\e[m"

DEPENDENCIES=(
  configurations
  hugo-modules
  hugo-theme
  kollitsch.dev
)

# check if all requirements are met
CHANGES=false
for DEPENDENCY in "${DEPENDENCIES[@]}"; do
  cd ../"${DEPENDENCY}" >/dev/null || return
  if [ "$(git status --porcelain | wc -l)" -eq "0" ]; then
    continue
  else
    CHANGES=true
    echo -e "\e[1;36m[================== ${DEPENDENCY} ==================]\e[m"
    if [ -d .git ]; then
      git status -s
    fi
  fi
done

# list changed repositories
if [ ${CHANGES} = true ]; then
  echo -e "\e[1;36m[================== Unstashed Changes ==================]\e[m"
  for DEPENDENCY in "${DEPENDENCIES[@]}"; do
    cd ../"${DEPENDENCY}" >/dev/null || return
    if [ "$(git status --porcelain | wc -l)" -eq "0" ]; then
      echo "ðŸŸ¢ ${DEPENDENCY}"
    else
      echo "ðŸ”´ ${DEPENDENCY}"
    fi
  done
fi

# ending
if [ ${CHANGES} = false ]; then
  echo "Nothing to do."
  echo "Completed in ${SECONDS}s"
  echo -e "\e[1;36m[================================================]\e[m"
else
  echo "Completed in ${SECONDS}s"
  echo -e "\e[1;36m[================================================]\e[m"
  exit 1
fi

set -euo pipefail # http://redsymbol.net/articles/unofficial-bash-strict-mode
IFS=$'\n\t'

# nc -w 10 -z 192.168.1.201 1313
