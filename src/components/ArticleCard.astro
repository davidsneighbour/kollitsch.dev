---

import type { CollectionEntry } from 'astro:content';

import SchemaBlogPost from '@components/schema/BlogPosting.astro';
import PostImage from '@components/PostImage.astro';
import { Image } from 'astro:assets';

import author from '@assets/images/patrick-kollitsch.png';

export interface Props {
  post: CollectionEntry<'blog'>;
}
const { post } = Astro.props;

import setup from '@data/setup.json';

---

<article class="
  relative isolate inset-0
  flex flex-col items-start justify-between
  rounded-(--card-radius) [--card-padding:--spacing(1)] [--card-radius:var(--radius-2xl)]
  ring-1 ring-gray-900/10 dark:ring-gray-100/10 ring-inset p-(--card-padding)
  bg-zinc-100 dark:bg-zinc-900
  hover:bg-zinc-100/90 dark:hover:bg-zinc-900/90
">

  <PostImage post={post} classes="max-w-full aspect-3/2 object-cover rounded-t-[calc(var(--card-radius)-var(--card-padding))]" />

  <div class="max-w-xl p-4">
    <!-- <div class="flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-gray-500"
        >{new Date(post.data.date).toLocaleDateString('en-GB')}</time
      >
    </div> -->
    <div class="group relative">
      <h3
        class="mt-3 text-gray-900 group-hover:text-gray-600"
      >
        <a href={`/blog/${post.id}/`}>
          <span class="absolute inset-0"></span>
          {post.data.title}
        </a>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
        {post.data.summary}
      </p>
    </div>
    <div class="relative mt-2 flex items-center gap-x-2">
      <Image
        src={author}
        width={256}
        height={256}
        alt={setup.author.name}
        class="size-10 rounded-full bg-gray-100"
      />
      <p class="font-semibold text-gray-900">
        <a href="#">
          <span class="absolute inset-0"></span>
          {setup.author.name}
        </a>
      </p>
    </div>
  </div>
  <SchemaBlogPost post={post} />
</article>
