#!/bin/bash

REQUIRED_TOOLS=(
  hugo
  npm
  export
  trap
  curl
)

for TOOL in "${REQUIRED_TOOLS[@]}"; do
  if ! command -v "${TOOL}" >/dev/null; then
    echo "${TOOL} is required... "
    exit 1
  fi
done

trap "{ killall -9 hugo; }" SIGINT

FILE=.env
if [ -f "$FILE" ]; then
  # echo "exporting .env"
  set -a
  # see https://github.com/koalaman/shellcheck/wiki/SC1090
  # shellcheck disable=SC1090
  source "${FILE}"
  set +a
fi

IP=${IP:-192.168.1.201}
PORT=${PORT:-1313}
HOST="http://${IP}:${PORT}"

# Start our server as a job
bin/server/run --quiet &
HUGO=$!

sleep 5

attempt_counter=0
max_attempts=60
sleep_duration=10

# shellcheck disable=SC2091
until $(curl --output /dev/null --silent --head --fail "${HOST}"); do
  if [ ${attempt_counter} -eq ${max_attempts} ]; then
    echo "The server is still not available. Exiting now."
    kill $HUGO
    exit 1
  fi
  # shellcheck disable=SC2004 # seems legit (fix won't work)
  attempt_counter=$(($attempt_counter + 1))
  # shellcheck disable=SC2004 # seems legit (fix won't work)
  if ! (($attempt_counter % 5)); then
    echo "Still waiting for the server to start"
  fi
  sleep $sleep_duration
done

echo "Server is running"

# Wait until Node deps is done
# wait $HUGO

npm run cypress

# gettin' hugo "done with"
kill $HUGO
