{
  "name": "@davidsneighbour/kollitsch-dev",
  "description": "Website and content for kollitsch.dev",
  "version": "2023.1.30",
  "license": "CC-BY-NC-SA-4.0 MIT",
  "private": true,
  "repository": "davidsneighbour/kollitsch.dev",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "homepage": "https://kollitsch.dev",
  "dependencies": {
    "algoliasearch": "^4.17.0",
    "alpinejs": "^3.12.0",
    "animate.css": "^4.1.1",
    "doiuse": "^4.4.1",
    "dotenv": "^16.0.3",
    "instantsearch.js": "^4.54.0",
    "lazysizes": "^5.3.2",
    "lockfile-lint": "^4.10.1",
    "needle": "^3.2.0",
    "ninja-keys": "^1.2.2",
    "pixrem": "^5.0.0",
    "playwright": "^1.32.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "request": "^2.88.2",
    "sass": "^1.61.0",
    "snoowrap": "^1.23.0",
    "trim": ">=1.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "web-vitals-element": "^1.3.7",
    "xml2js": "^0.5.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@clack/prompts": "^0.6.3",
    "@davidsneighbour/babel-config": "5.1.14",
    "@davidsneighbour/bootstrap-config": "5.1.15",
    "@davidsneighbour/browserslist-config": "5.1.13",
    "@davidsneighbour/commitlint-config": "5.1.13",
    "@davidsneighbour/cssnano-config": "5.1.14",
    "@davidsneighbour/cypress-config": "5.1.13",
    "@davidsneighbour/eslint-config": "5.1.17",
    "@davidsneighbour/htmlvalidate-config": "5.1.13",
    "@davidsneighbour/markdownlint-config": "5.1.14",
    "@davidsneighbour/postcss-config": "5.1.16",
    "@davidsneighbour/prettier-config": "5.1.16",
    "@davidsneighbour/remark-config": "5.1.1",
    "@davidsneighbour/standard-version-config": "5.0.16",
    "@davidsneighbour/stylelint-config": "5.1.14",
    "@davidsneighbour/textlint-config": "5.0.16",
    "@davidsneighbour/tools": "5.1.16",
    "@davidsneighbour/webpack-config": "5.1.16",
    "@types/alpinejs": "^3.7.1",
    "@types/yargs": "^17.0.24",
    "prettier-plugin-go-template": "^0.0.13"
  },
  "scripts": {
    "audit:html": "html-validate public/**/*.html --config=tests/html-validator/config.json",
    "audit:hugo": "./bin/audit/audit",
    "build": "run-s build:critical build:hugo",
    "build:critical": "./bin/build/critical-css",
    "build:frontmatter": "wireit",
    "build:hugo": "./bin/build/hugo",
    "build:script": "tsc",
    "build:tailwind": "npx tailwindcss -i ./assets/css/main.css -o ./assets/dist/style.css",
    "check-env": "node -e 'console.log(process.env)' | grep npm_config_",
    "clean": "run-p clean:*",
    "clean:audit": "rimraf tests/lighthouse/reports/*.{csv,html,json}",
    "clean:cypress": "rimraf tests/cypress/{downloads,screenshots,videos}/*",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock",
    "clean:netlify": "rimraf .netlify/cache .netlify/functions",
    "clean:npm": "rimraf node_modules package-lock.json",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "cypress": "npm run cypress:run",
    "cypress:info": "cypress info",
    "cypress:install": "cypress install",
    "cypress:run": "cypress open --config-file tests/cypress/cypress.config.ts",
    "cypress:verify": "cypress verify",
    "deploy": "npm run release:patch && bin/deploy/live",
    "deploy:major": "npm run release:major && bin/deploy/live",
    "deploy:minor": "npm run release:minor && bin/deploy/live",
    "deploy:test": "bin/deploy/test",
    "lighthouse": "bin/audit/lighthouse",
    "lint": "wireit",
    "lint:html": "html-validate --config=tests/html-validator/config.json public",
    "lint:html:config": "html-validate --print-config=tests/html-validator/config.json",
    "lint:lockfiles": "lockfile-lint --path package-lock.json --type=npm --validate-https --allowed-hosts=npm --empty-hostname=false --validate-package-names --validate-checksum --validate-integrity",
    "lint:scripts": "eslint assets/js --ext .ts",
    "lint:scripts:fix": "eslint assets/js --ext .ts --fix",
    "lint:styles": "stylelint --color --report-descriptionless-disables --report-invalid-scope-disables --report-needless-disables assets/scss",
    "lint:styles:config": "stylelint --print-config index.js",
    "lint:styles:fix": "stylelint --fix --color --report-descriptionless-disables --report-invalid-scope-disables --report-needless-disables assets/scss",
    "lint:templates": "bin/audit/lint-template-style",
    "lint:vale": "vale content",
    "new": "node bin/content/index.mjs",
    "prettier": "prettier 'assets/**/*.ts'",
    "prettier:fix": "prettier --write 'assets/**/*.ts'",
    "release": "npm run release:patch",
    "release:major": "standard-version --release-as major --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "standard-version --release-as minor --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:patch": "standard-version --release-as patch --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "server": "bin/server/run",
    "tests": "npm run cypress",
    "update": "run-p update:pre:* && run-s update:post:*",
    "update:post:npm": "fixpack && npx browserslist@latest --update-db",
    "update:pre:npm": "npm-check-updates -u --target minor && npm install",
    "update:pre:vale": "vale sync"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "browserslist": [
    "extends @davidsneighbour/browserslist-config"
  ],
  "eslintConfig": {
    "extends": "@davidsneighbour/eslint-config"
  },
  "stylelint": {
    "extends": "@davidsneighbour/stylelint-config",
    "rules": {}
  },
  "wireit": {
    "build:frontmatter": {
      "command": "node assets/frontmatter/build.ts",
      "files": [
        "assets/frontmatter/**/*.{ts,json}"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:html",
        "lint:lockfiles"
      ]
    }
  }
}
