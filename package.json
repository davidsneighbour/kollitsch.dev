{
  "name": "@davidsneighbour/kollitsch-de",
  "version": "2022.2.63",
  "license": "UNLICENSED",
  "description": "Website and content for kollitsch.de",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "homepage": "https://kollitsch.de",
  "repository": "davidsneighbour/kollitsch.de",
  "dependencies": {
    "@dnb-org/htmlvalidate-config": "^0.0.3",
    "@sentry/node": "^6.18.1",
    "@sentry/tracing": "^6.18.1",
    "alpinejs": "^3.9.1",
    "dotenv": "^16.0.0",
    "netlify-cli": "^9.12.3",
    "ninja-keys": "^1.1.12",
    "svgo": "^2.8.0"
  },
  "devDependencies": {
    "@dnb-org/bootstrap-config": "^3.5.7",
    "@dnb-org/browserslist-config": "^3.5.8",
    "@dnb-org/commitlint-config": "^3.5.7",
    "@dnb-org/cssnano-config": "^3.5.7",
    "@dnb-org/cypress-config": "^3.5.7",
    "@dnb-org/eslint-config": "^3.5.9",
    "@dnb-org/postcss-config": "^3.5.7",
    "@dnb-org/prettier-config": "^3.5.8",
    "@dnb-org/standard-version-config": "^3.5.7",
    "@dnb-org/stylelint-config": "^3.5.12",
    "@dnb-org/tools": "^3.5.7",
    "@types/bootstrap": "^5.1.9",
    "algoliasearch": "^4.12.2",
    "ansi-regex": ">=6.0.1",
    "cypress-html-validate": "^2.1.3",
    "html-validate": "^6.5.0",
    "instantsearch.js": "^4.39.1",
    "lazysizes": "^5.3.2",
    "lite-youtube-embed": "^0.2.0",
    "mem": "^9.0.2",
    "pixrem": "^5.0.0",
    "precss": "^4.0.0",
    "trim": ">=1.0.1",
    "typescript": "^4.6.2",
    "yargs-parser": ">=21.0.1"
  },
  "scripts": {
    "audit:html": "hugo && html-validate public/**/*.html",
    "audit:hugo": "./bin/dnb-hugo-audit",
    "build": "run-s build:critical build:hugo",
    "build:critical": "",
    "build:highlights": "hugo gen chromastyles --style=monokai > assets/scss/components/_syntaxhighlightingdark.scss && hugo gen chromastyles --style=monokailight > assets/scss/components/_syntaxhighlightinglight.scss",
    "build:hugo": "hugo --minify",
    "build:script": "tsc",
    "check-env": "node -e 'console.log(process.env)' | grep npm_config_",
    "clean": "run-p clean:hugo",
    "clean:all": "npm run clean:hugo && npm run clean:npm",
    "clean:hugo": "rimraf hugo.log hugo_stats.json resources public assets/jsconfig.json .hugo_build.lock",
    "clean:npm": "rimraf node_modules package-lock.json",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "cypress": "npm run cypress:run",
    "cypress:info": "cypress info",
    "cypress:install": "cypress install",
    "cypress:run": "cypress open --config-file tests/cypress/cypress.json",
    "cypress:verify": "cypress verify",
    "lighthouse": "bin/lighthouse",
    "lint:scripts": "eslint assets/js --ext .ts",
    "lint:scripts:fix": "eslint assets/js --ext .ts --fix",
    "lint:styles": "stylelint assets/scss",
    "lint:styles:fix": "stylelint assets/scss --fix",
    "lint:templates": "bin/lint-templates",
    "prettier": "prettier 'assets/**/*.ts'",
    "prettier:fix": "prettier --write 'assets/**/*.ts'",
    "release": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "serve": "run-p serve:hugo",
    "serve:hugo": "bin/server/run",
    "serve:script": "tsc --watch",
    "server": "npm run serve",
    "server:paranoid": "bin/server/run-paranoid",
    "update": "npm-check-updates -u && npm install && fixpack && npx browserslist@latest --update-db"
  },
  "private": true,
  "browserslist": [
    "extends @dnb-org/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@dnb-org/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@dnb-org/eslint-config"
    ]
  },
  "prettier": "@dnb-org/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@dnb-org/remark-config"
    ]
  },
  "slug": "kollitsch-de",
  "url": "https://kollitsch.de"
}
