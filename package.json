{
  "name": "@davidsneighbour/kollitsch-dev",
  "description": "Website and content for kollitsch.dev",
  "version": "2023.2.145",
  "license": "CC-BY-NC-SA-4.0 MIT",
  "private": true,
  "repository": "davidsneighbour/kollitsch.dev",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "homepage": "https://kollitsch.dev",
  "dependencies": {
    "@clack/prompts": "0.6.3",
    "@davidsneighbour/configurations": "^5.2.16",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@types/yargs": "17.0.24",
    "animate.css": "4.1.1",
    "bootstrap-icons": "^1.10.5",
    "caniuse-lite": "1.0.30001515",
    "doiuse": "6.0.2",
    "dotenv": "16.3.1",
    "imagemin-lint-staged": "0.5.1",
    "instantsearch.js": "4.56.5",
    "lazysizes": "5.3.2",
    "lint-staged": "13.2.3",
    "needle": "3.2.0",
    "ninja-keys": "1.2.2",
    "pagefind": "0.12.0",
    "playwright": "1.36.1",
    "puppeteer": "^20.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "request": "2.88.2",
    "sass": "1.63.6",
    "simple-git-hooks": "2.8.1",
    "snoowrap": "1.23.0",
    "trim": "1.0.1",
    "ts-node": "10.9.1",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "web-vitals-element": "github:davidsneighbour/web-vitals-element",
    "xml2js": "0.6.0",
    "yargs": "17.7.2"
  },
  "scripts": {
    "audit:html": "hugo && html-validate public/**/*.html --config=tests/html-validator/config.json",
    "audit:hugo": "./bin/hugo/audit",
    "build:hugo": "./bin/hugo/build",
    "build:webpack:dev": "cross-env NODE_ENV=development webpack --config webpack.dev.js",
    "build:webpack:prod": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "check-env": "node -e 'console.log(process.env)' | grep npm_config_",
    "clean": "run-p clean:*",
    "clean:audit": "rimraf tests/lighthouse/reports/*.{csv,html,json}",
    "clean:cypress": "rimraf tests/cypress/{downloads,screenshots,videos}/*",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock",
    "clean:netlify": "rimraf .netlify/cache .netlify/functions",
    "clean:npm": "rimraf node_modules package-lock.json",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "cypress": "npm run cypress:run",
    "cypress:info": "cypress info",
    "cypress:install": "cypress install",
    "cypress:run": "cypress open --config-file tests/cypress/cypress.config.ts",
    "cypress:verify": "cypress verify",
    "deploy": "npm run deploy:stage && npm run release:patch && bin/hugo/deploy",
    "deploy:major": "npm run release:major && bin/deploy/live",
    "deploy:minor": "npm run release:minor && bin/deploy/live",
    "deploy:stage": "notify-send \"VSCode/Netlify: switch to the proper account now...\" && netlify switch",
    "eslint": "eslint . --max-warnings 0 --report-unused-disable-directives --ignore-path .gitignore",
    "eslint-fix": "npm run eslint -- --fix",
    "hooks:update": "simple-git-hooks",
    "lighthouse": "bin/audit/lighthouse",
    "lint": "wireit",
    "lint:hook:commit": "lint-staged",
    "lint:html": "html-validate --config=tests/html-validator/config.json public",
    "lint:html:config": "html-validate --print-config=tests/html-validator/config.json",
    "lint:lockfiles": "lockfile-lint --path package-lock.json --type=npm --validate-https --allowed-hosts=npm --empty-hostname=false --validate-package-names --validate-checksum --validate-integrity",
    "lint:remark": "remark content/**/*.md",
    "lint:scripts": "eslint assets/js --ext .ts",
    "lint:scripts:fix": "eslint assets/js --ext .ts --fix",
    "lint:styles": "stylelint --color --report-descriptionless-disables --report-invalid-scope-disables --report-needless-disables assets/scss",
    "lint:styles:fix": "stylelint --fix --color --report-descriptionless-disables --report-invalid-scope-disables --report-needless-disables themes/hugo-theme/assets/scss",
    "lint:templates": "bin/audit/lint-template-style",
    "lint:vale": "vale content",
    "new": "node bin/hugo/content.mjs",
    "pagefind": "pagefind",
    "pipeline": "tsx pipeline.ts",
    "prettier": "prettier 'assets/**/*.ts'",
    "prettier:fix": "prettier --write 'assets/**/*.ts'",
    "release": "./bin/repo/maintenance/dependencies && npm run release:patch",
    "release:major": "commit-and-tag-version --release-as major --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/repo/hooks/postrelease",
    "release:minor": "commit-and-tag-version --release-as minor --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/repo/hooks/postrelease",
    "release:patch": "commit-and-tag-version --release-as patch --sign -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/repo/hooks/postrelease",
    "server": "bin/hugo/server",
    "server:pagefind": "pagefind --watch",
    "server:webpack": "cross-env NODE_ENV=development webpack --watch --config webpack.dev.js",
    "tests": "npm run cypress",
    "update": "wireit"
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "lint:html",
        "lint:lockfiles"
      ]
    },
    "update": {
      "dependencies": [
        "update:post"
      ]
    },
    "update:post": {
      "command": "fixpack && browserslist --update-db",
      "dependencies": [
        "update:pre:npm",
        "update:pre:vale",
        "update:pre:submodules"
      ]
    },
    "update:pre:submodules": {
      "command": "git submodule update --recursive --remote"
    },
    "update:pre:npm": {
      "command": "npm-check-updates -u --target minor"
    },
    "update:pre:vale": {
      "command": "vale sync"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "eslintConfig": {
    "extends": "@davidsneighbour/eslint-config",
    "overrides": [
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/recommended"
        ]
      }
    ]
  }
}
